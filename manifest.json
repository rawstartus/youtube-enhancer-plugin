{
    "manifest_version": 3,
    "name": "YouTube Power Playback & LLM Summarizer",
    "version": "1.0",
    "description": "Adds extreme speed options (up to 4x) and a Gemini-powered summarization button to YouTube videos.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        },
        "default_title": "Playback & Summarizer Settings"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content/playback_controller.js",
                "content/summarizer_ui.js"
            ],
            "css": [
                "content/styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://www.youtube.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background/service_worker.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png",
                "content/styles.css"
            ],
            "matches": [
                "*://www.youtube.com/*"
            ]
        }
    ]
}